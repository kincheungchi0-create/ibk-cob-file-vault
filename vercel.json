{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/upload", "dest": "/api/upload.js" },
    { "src": "/api/download(.*)", "dest": "/api/download.js" },
    { "src": "/api/files(.*)", "dest": "/api/files.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "functions": {
    "api/upload.js": {
      "maxDuration": 60,
      "memory": 1024
    }
  }
}
